<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/history_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/file_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Имя файла"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/preview_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:visibility="gone"/>

        <VideoView
            android:id="@+id/preview_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

    </FrameLayout>

    <Button
        android:id="@+id/get_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Получить информацию"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingTop="16dp"
        android:id="@+id/info_block">

        <TextView
            android:id="@+id/upload_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Дата загрузки: —" />

        <TextView
            android:id="@+id/file_length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Длительность: —" />

        <TextView
            android:id="@+id/bags_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сумок: —" />

        <TextView
            android:id="@+id/handbags_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ручных сумок: —" />

        <TextView
            android:id="@+id/packets_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Пакетов: —" />

    </LinearLayout>
</LinearLayout>
